<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>application-socle</artifactId>
        <groupId>com.weslaty</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>application-socle-data-access-layer</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>${project.artifactId}</name>

    <dependencies>
        <!-- JDBC MySQL driver-->
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${mysql-connector-java.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Jobs to drop and create automatically databases during building application -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>sql-maven-plugin</artifactId>
                <version>${sql-maven-plugin.version}</version>
                <dependencies>
                    <!-- JDBC MySQL driver-->
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>${mysql-connector-java.version}</version>
                    </dependency>
                </dependencies>
                <!-- Common configuration shared by all executions -->
                <configuration>
                    <driver>com.mysql.cj.jdbc.Driver</driver>
                    <url>${mysql.url.server}</url>
                    <!-- You can comment out username/password configurations and
                        have maven to look them up in your settings.xml using ${settingsKey}
                    -->
                    <username>${mysql.username}</username>
                    <password>${mysql.password}</password>
                    <skip>${maven.skip.test}</skip>
                </configuration>
                <!-- Jobs -->
                <executions>
                    <execution>
                        <id>drop-db-before-test-if-any</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <!-- need another database to drop the targeted one -->
                            <url>${mysql.url.server}</url>
                            <autocommit>true</autocommit>
                            <sqlCommand>drop database application_socle_db</sqlCommand>
                            <!-- ignore error when database is not avaiable -->
                            <onError>continue</onError>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-db</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <url>${mysql.url.server}</url>
                            <!-- no transaction -->
                            <autocommit>true</autocommit>
                            <sqlCommand>create database application_socle_db</sqlCommand>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Flyway database migration tool -->
            <plugin>
                <groupId>org.flywaydb</groupId>
                <artifactId>flyway-maven-plugin</artifactId>
                <version>4.2.0</version>
                <dependencies>
                    <!-- JDBC MySQL driver-->
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>${mysql-connector-java.version}</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <driver>com.mysql.cj.jdbc.Driver</driver>
                    <url>${mysql.url.server}</url>
                    <user>root</user>
                    <password>root</password>
                    <schemas>
                        <schema>application_socle_db</schema>
                    </schemas>
                    <cleanDisabled>false</cleanDisabled>
                    <skip>false</skip>
                    <locations>
                        <location>classpath:database.migration</location>
                    </locations>
                </configuration>
                <executions>
                    <execution>
                        <id>clean-database</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>migrate-database</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>migrate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
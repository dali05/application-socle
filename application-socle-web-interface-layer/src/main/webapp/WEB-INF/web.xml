<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="false">

    <display-name>application-solce</display-name>

    <!--
        Remove classpath scanning (from servlet 3.0) in order to speed jetty startup :
        metadata-complete="true" above + empty absolute ordering below
    -->
    <absolute-ordering>
        <!-- Empty absolute ordering is necessary to completely desactivate classpath scanning -->
    </absolute-ordering>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>


    <resource-ref>
        <description>JDBC Datasource</description>
        <res-ref-name>jdbc/application_socle_db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>servletTest</servlet-name>
        <servlet-class>com.weslaty.web.servlet.servletTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletTest</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
</web-app>